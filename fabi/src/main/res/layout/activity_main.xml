<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controleur.MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        app:titleTextColor="@color/bleue_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_home"
        >
        <TextView
            android:id="@+id/text_ninotech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ninocash"
            android:textColor="@color/bleue_facebook"
            android:textSize="30dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/idButtonAjouter"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/forme_white_cercle"
            android:theme="@style/CouleurToolbar"
            app:icon="@drawable/baseline_add_24"
            android:layout_marginLeft="50dp"
            app:iconTint="@color/black" />
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_main"
        android:layout_above="@+id/frameLayoutMain"
        >
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frameLayoutMain"
        android:layout_width="match_parent"
        android:layout_below="@+id/toolbar_main"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation_menu"
        />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation_menu"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_menu"
        />
</RelativeLayout>