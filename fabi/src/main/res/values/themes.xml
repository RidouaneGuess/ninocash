<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ras" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bleue_facebook</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/transparente</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CouleurToolbar" parent="Theme.Ras">
        <item name="colorPrimary">@color/couleurGrise</item>
    </style>
    <style name="CouleurBlance" parent="Theme.Ras">
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="Dialog.fastpv" parent="android:Theme.Dialog">
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/agrandir_dilog</item>
        <item name="android:windowExitAnimation">@anim/agrandir_dilog_out</item>
    </style>
    <style name="semeste">
        <item name="android:fontFamily">@font/apple2</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="semeste2">
        <item name="android:fontFamily">@font/apple2</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="ColorMatier">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustoTollbar">
        <item name="android:textSize">25dp</item>
        <item name="android:fontFamily">@font/apple1</item>
    </style>

    <style name="theme_radus">
        <item name="android:radius">5dp</item>
        <item name="android:background">@color/background_color</item>
    </style>
    <style name="face_theme1">
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:padding">15dp</item>
    </style>
    <style name="face_theme2" parent="face_theme1">
    </style>
    <style name="CouleurNoir" parent="Theme.Ras">
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="Dialog.Ninocash" parent="android:Theme.Dialog">
        <item name="colorPrimary">@color/sombre</item>
    </style>
</resources>