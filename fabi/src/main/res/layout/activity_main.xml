<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fabi.Controleur.MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/idToolbarMain"
        app:titleTextColor="@color/bleue_facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="facebook"
            android:textColor="@color/bleue_facebook"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/idButtonAjouter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/forme_white_cercle"
                android:theme="@style/CouleurToolbar"
                app:icon="@drawable/baseline_add_24"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/idButtonrecherche"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/forme_white_cercle"
                android:theme="@style/CouleurToolbar"
                app:icon="@drawable/baseline_search_24"
                app:iconTint="@color/black" />

            <Button
                android:id="@+id/idButtonParametre"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/forme_white_cercle"
                android:theme="@style/CouleurToolbar"
                app:icon="@drawable/baseline_menu_24"
                app:iconTint="@color/black" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:id="@+id/frameLayouttmp"
        android:layout_below="@+id/idToolbarMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>